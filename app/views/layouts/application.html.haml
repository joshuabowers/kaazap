!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title KaaZaP
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = stylesheet_link_tag 'https://fonts.googleapis.com/icon?family=Material+Icons'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    .filters
      %svg{ xmlns: 'http://www.w3.org/2000/svg', version: 1.1 }
        %defs
          %filter#texture-felt{ x: '0%', y: '0%', width: '100%', height: '100%' }
            %feTurbulence{ type: 'fractalNoise', baseFrequency: 0.4, numOctaves: 5, result: 'noise' }
            %feDiffuseLighting{ in: 'noise', 'lighting-color' => 'white', surfaceScale: 2, result: 'diffLight' }
              %feDistantLight{ azimuth: 45, elevation: 35 }
            %feColorMatrix{ type: 'saturate', values: 0 }
          %filter#texture-wood{ x: '0%', y: '0%', width: '100%', height: '100%' }
            %feTurbulence{ type: 'turbulence', baseFrequency: 0.01, numOctaves: 3, result: 'noise' }
            %feDiffuseLighting{ in: 'noise', 'lighting-color' => 'white', surfaceScale: 2, result: 'diffLight' }
              %feDistantLight{ azimuth: 45, elevation: 35 }
            %feColorMatrix{ type: 'saturate', values: 0 }
    %main
      %header.title
        %h1 KaaZaP

      .card{ data: { value: 10 } }
      .card.negative{ data: { value: -6 } }
      .card.positive.two-thirds-size{ data: { value: 3 } }
      .card.special.half-size{ data: { value: 'D' } }
      = yield
